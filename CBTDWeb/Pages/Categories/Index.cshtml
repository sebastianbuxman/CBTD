@page
@model CBTDWeb.Pages.Categories.IndexModel


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Upsert" class="btn btn-primary">
                <i class="bg-info bi-plus-circle"></i>Create New Category
            </a>
        </div>
    </div>

    <table class="table table-boardered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>&npsp;</th>
            </tr>
        </thead>
        <tbody>
            <!--Loop through to create each row-->
            @foreach (var obj in Model.objCategoryList)
            {
            <tr>
                <td style="width:50%">@obj.Name</td>
                <td style="width:30%">@obj.DisplayOrder</td>
                <td style="width:20%"></td>
            </tr>
            }
        </tbody>
    </table>
</div><!--end of bootstrap container-->